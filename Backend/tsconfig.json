{
  "compilerOptions": {
    "target": "ES2020",                // modern JS target
    "module": "CommonJS",              // compatible with Node.js runtime
    "rootDir": "src",                  // your TypeScript source folder
    "outDir": "dist",                  // compiled JS output folder
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": ["src"],                  // only compile src folder
  "exclude": ["dist", "node_modules"]
}
